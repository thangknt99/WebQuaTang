@using Web.Model
@model Web.Model.tbl_VanBan
@using (Html.BeginForm("SendMail", "VanBan", FormMethod.Post,
                new { @id = "basicForm", @class = "form-horizontal" }))
{
    @Html.Hidden("lstid", TempData["id"])
    <div class="form-group">
        <label class="col-md-2 control-label">Chọn nhóm nhận</label>
        @{
    var lstGroup = (List<GroupCusUser>)TempData["lstGroup"];
        }
        <div class="col-md-10">
            @Html.DropDownList("nhomnguoinhan", new SelectList(lstGroup, "ID", "NameGroup"), new { @class = "form-control", multiple = "" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Chọn người nhận</label>
        @{
    var lstUser = (List<tbl_User>)TempData["lstUser"];
        }
        <div class="col-md-10">
            @Html.DropDownList("nguoinhan", new SelectList(lstUser, "ID", "UserName"), new { @class = "form-control", multiple = "" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Nhập người nhận</label>
        <div class="col-md-10">
            @Html.TextBox("email_input", "", new { @class = "form-control", placeholder = "@gmail.com" })

        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Tên chủ đề</label>
        <div class="col-md-10">
            @Html.TextBox("tenchude", "", new { @class = "form-control", placeholder = "Tên chủ đề" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Nội dung</label>
        <div class="col-md-10">
            @Html.TextArea("noidung", "", new { @class = "form-control", placeholder = "Nội dung" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">&nbsp;</label>
        <div class="col-md-10">
            <button type="submit" class="btn btn-primary waves-effect waves-light ">Gửi</button>
        </div>
    </div>
}
<script>
    // Basic Form
    $(document).ready(function () {
        $("#nhomnguoinhan").select2();
        $("#nguoinhan").select2();
        $("#source").select2();
        CKEDITOR.replace("noidung", {
            language: 'vi',
            filebrowserBrowseUrl: "/Content/Admin/assets/ckfinder/ckfinder.html",
            filebrowserImageBrowseUrl: '/Content/Admin/assets/ckfinder/ckfinder.html?Type=Images',
            filebrowserFlashBrowseUrl: '/Content/Admin/assets/ckfinder/ckfinder.html?Type=Flash',
            height: 150
        });
    });
</script>