@using Web.Model
@using Web.Model.CustomModel
@{
    ViewBag.Title = "Lĩnh vực văn bản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var lstAction = (List<int>)HttpContext.Current.Session["Action"];
    var languages = (List<tbl_Languages>)TempData["Languages"];
    
}
<script src="~/AppJs/linhvucvanban.js"></script>
@using (Ajax.BeginForm("ListData", "LinhVucVanBan", null, new AjaxOptions
{
    HttpMethod = "Post",
    OnSuccess = "linhvucvanban.onSearchSuccess",
}, new { @id = "frmSearch" }))
{
    
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Danh sách lĩnh vực văn bản</h3>
                <div style="top: 8px;position: absolute; right: 40px;" class="pull-right">
                    @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Add))
                    {
                        <button type="button" class="btn btn-primary waves-effect waves-light" onclick=" linhvucvanban.loadfrmAdd() "><i class="fa fa-plus"></i> Thêm mới</button>
                    }
                    @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Edit))
                    {
                        <button type="button" class="btn btn-success waves-effect waves-light" onclick=" linhvucvanban.onupdateposittion() "><i class="fa fa-refresh"></i> Cập nhật vị trí</button>
                    }
                    @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Delete))
                    {
                        <button type="button" class="btn btn-danger waves-effect waves-light" onclick=" linhvucvanban.onmultidelete() "><i class="fa fa-trash-o"></i> Xóa nhiều</button>
                    }
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive" id="gridData">

                        </div>
                        @*<div class="col-md-12" id="paginationholder">
                            <ul id="pagination" class="pagination"></ul>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        linhvucvanban.loadData(1);
    });
</script>