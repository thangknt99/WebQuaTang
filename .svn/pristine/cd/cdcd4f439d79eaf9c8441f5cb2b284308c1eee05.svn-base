@using Web.Model.CustomModel
@model IEnumerable<Web.Model.tbl_Footer>
@{
    var lstAction = (List<int>)HttpContext.Current.Session["Action"];
}
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                <input type="hidden" id="hdfID" />
                <div class="checkbox">
                    <input id="chkall" type="checkbox">
                    <label for="chkall"></label>
                </div>
            </th>
            <th style="text-align:center;">Tiêu đề</th>
            <th style="text-align:center;">Địa chỉ</th>
            <th style="text-align:center;">Số điện thoại</th>
            <th style="text-align:center;">Email</th>
            <th style="text-align:center;">Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="">
                    <div class="checkbox">
                        <input type="checkbox" value="@item.ID" id="chk'@item.ID'">
                        <label for="chk'@item.ID'"></label>
                    </div>
                </td>
                <td  style="vertical-align: middle;">@item.Name</td>
                <td  style="vertical-align: middle;">@item.Address</td>
                <td  style="vertical-align: middle;">@item.Phone</td>
                <td  style="vertical-align: middle;">@item.Email</td>
                <td  style="vertical-align: middle;">@Html.Raw(item.Status ? "<span style='color:green'>Kích hoạt</span>" : "<span style='color:red'>Vô hiệu</span>")</td>
                <td  style="width:150px">
                    <div class="btn-list pull-right mr5">
                        @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Edit))
                        {
                            <a href="#" class="btn btn-primary btn-bordered" onclick="Footer.loadfrmedit(@item.ID) "><i class=" glyphicon glyphicon-pencil"></i></a>
                        }
                        @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Edit))
                        {
                            <a href="#" class="btn btn-success btn-bordered" onclick="Footer.active(@item.ID) " title="@(item.Status ? "Vô hiệu" : "Kích hoạt" )">
                                <i class="fa fa-power-off"></i>
                            </a>
                        }
                        @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Delete))
                        {
                            <a href="#" class="btn btn-danger btn-bordered" onclick="Footer.ondelete(@item.ID) ">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        InitClickCheckAllInTable("chkall", function (res) {
            $("#hdfID").val(res);
        });
        $('.cabn_datatable').dataTable(
            {
                "oLanguage": {
                    "sUrl": "/Content/Vietnamese.json"
                },
            }
        );
    });
</script>
