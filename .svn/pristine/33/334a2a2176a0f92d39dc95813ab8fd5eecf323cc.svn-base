<script>   

    var Validate = function () {
        if ($("#basicForm #Name").val() == "") {
            $("#basicForm #Name").attr("style", "border:1px solid red");
            alertmsg.error("Bạn chưa nhập tên menu");
            return false;
        }
        else {
            $("#basicForm #Name").attr("style", "");
        }
