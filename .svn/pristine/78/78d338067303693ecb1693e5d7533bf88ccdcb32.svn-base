@{
    ViewBag.Title = "Quản lý tra loi binh luan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var lstAction = (List<int>)HttpContext.Current.Session["Action"];
}
@using Web.Model
@using Web.Model.CustomModel
@model List<tbl_TTHCComment>
<script src="~/AppJs/TTHCcomment.js"></script>
@using (Ajax.BeginForm("ListDataReply", "TTHC", null , new AjaxOptions
{
    HttpMethod = "Post",
    OnSuccess = "TTHCcomment.onSearchRep",
}, new { @id = "frmSearch" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Tìm kiếm</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <input type="hidden" name="id" value="@ViewBag.CommentId" />
                        <div class="form-group col-md-2 col-sm-2">
                            <input type="text" name="TuNgay" id="TuNgay" class="form-control datepicker-mask checkdate" placeholder="Từ ngày" data-mask="99/99/9999" />
                        </div>
                        <div class="form-group col-md-2 col-sm-2">
                            <input type="text" name="DenNgay" id="DenNgay" class="form-control datepicker-mask2 checkdate" placeholder="Đến ngày" data-mask="99/99/9999" />
                        </div>
                        <div class="col-md-2 col-sm-2">
                            <button type="submit" style="display: block;" id="btnSearch" class="btn btn-purple waves-effect waves-light">Tìm kiếm</button>
                        </div>
                        <span id="show_errordate" class="col-md-12 text-danger text-right"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Danh sách trả lời</h3>
                <div style="top: 8px;position: absolute; right: 40px;" class="pull-right">
                    @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Edit))
                    {
                        <button type="button" class="btn btn-info waves-effect waves-light" onclick="TTHCcomment.loadFrmAdd(@ViewBag.CommentId)"><i class="fa fa-plus"></i> Thêm mới</button>
                    }
                    @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Delete))
                    {
                        <button type="button" class="btn btn-danger waves-effect waves-light" onclick="TTHCcomment.onmultiRepdelete(@ViewBag.CommentId)"><i class="fa fa-trash-o"></i> Xóa nhiều</button>
                    }
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive" id="gridData">

                        </div>
                        <div class="col-md-12" id="paginationholder">
                            <ul id="pagination" class="pagination"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        TTHCcomment.loadDataReply(@ViewBag.CommentId);
    });
</script>