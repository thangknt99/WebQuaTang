@{
    ViewBag.Title = "Thông tin liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/AppJs/ContactInfo.js"></script>
<script src="~/Content/Admin/assets/ckeditor/ckeditor.js"></script>
<script src="~/Content/Admin/assets/ckfinder/ckfinder.js"></script>
<script src="~/Content/Admin/assets/ckeditor/config.js"></script>
@model Web.Model.tbl_ContactInfo
<div class="row content-space">
    <div class="col-md-12 col-xs-12">
        <div class="content-qa col-md-12">
            <form action="~/Admin/ContactInfo/Edit" method="post" id="basicForm">
                @Html.HiddenFor(g => g.ID)
                <div class="form-group lbnr">
                    <label class="control-label col-md-2">Thông tin liên hệ</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(g => g.NoiDung, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group lbnr">
                    <label class="control-label col-md-2 mt10">&nbsp;</label>
                    <div class="col-md-10 mt10">
                        <button type="submit" class="btn btn-primary waves-effect waves-light">Cập nhật</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#basicForm").validate({
            rules:
            {
                NoiDung:
                {
                    required: true
                }
            },
            messages:
            {
                NoiDung:
                {
                    required: "Bạn phải nhập trường này"
                }
            },
        });
        CKEDITOR.replace("NoiDung", {
            language: 'vi',
            filebrowserBrowseUrl: "/Content/Admin/assets/ckfinder/ckfinder.html",
            filebrowserImageBrowseUrl: '/Content/Admin/assets/ckfinder/ckfinder.html?Type=Images',
            filebrowserFlashBrowseUrl: '/Content/Admin/assets/ckfinder/ckfinder.html?Type=Flash',
            height: 300
        });
    })
</script>
<style>
    .text-bold {
        font-weight: bold;
    }

    .lbnr{
       padding-bottom:10px;
    }

    .content-qa .form-group {
        width: 100%;
    }
</style>