@using System.Web.UI.WebControls
@using OfficeOpenXml.FormulaParsing.Excel.Functions.RefAndLookup
@using Web.Model
@model List<tbl_News>
@{
    ViewBag.Title = "Quản trị Liên minh HTX Quảng Trị";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var rowUser = (tbl_UserAdmin)ViewBag.rowUser;
    var lstId = (List<string>)ViewBag.lstQuyenId;
}
<div class="row">
    <div class="col-sm-12">
        <h4 class="pull-left page-title">Xin chào, @rowUser.FullName !</h4>
        <ol class="breadcrumb pull-right">
            <li><a href="#">Trang chủ</a></li>
            <li class="active">Thống kê</li>
        </ol>
    </div>
</div>

<div class="row">
    @if (lstId.Contains("10"))
    {
        <div class="col-md-6 col-sm-6 col-lg-4">
            <div class="mini-stat clearfix bx-shadow">
                <span class="mini-stat-icon bg-primary"><i class="fa fa-tag" aria-hidden="true"></i></span>
                <div class="mini-stat-info text-right text-muted">
                    <span class="counter">@ViewBag.countNhap</span>
                    Tin nháp
                </div>
            </div>
        </div>
    }

    @if (lstId.Contains("9"))
    {
        <div class="col-md-6 col-sm-6 col-lg-4">
            <div class="mini-stat clearfix bx-shadow">
                <span class="mini-stat-icon bg-primary"><i class="fa fa-tag" aria-hidden="true"></i></span>
                <div class="mini-stat-info text-right text-muted">
                    <span class="counter">@ViewBag.countBienTap</span>
                    Tin biên tập
                </div>
            </div>
        </div>
    }
    @if (lstId.Contains("11"))
    {
        <div class="col-md-6 col-sm-6 col-lg-4">
            <div class="mini-stat clearfix bx-shadow">
                <span class="mini-stat-icon bg-primary"><i class="fa fa-tag" aria-hidden="true"></i></span>
                <div class="mini-stat-info text-right text-muted">
                    <span class="counter">@ViewBag.countTrinhBay</span>
                    Tin trình bày
                </div>
            </div>
        </div>
    }
    @if (lstId.Contains("12"))
    {
        <div class="col-md-6 col-sm-6 col-lg-4">
            <div class="mini-stat clearfix bx-shadow">
                <span class="mini-stat-icon bg-primary"><i class="fa fa-tag" aria-hidden="true"></i></span>
                <div class="mini-stat-info text-right text-muted">
                    <span class="counter">@ViewBag.countSoatLoi</span>
                    Tin soát lỗi
                </div>
            </div>
        </div>
    }
    @if (lstId.Contains("6"))
    {
        <div class="col-md-6 col-sm-6 col-lg-4">
            <div class="mini-stat clearfix bx-shadow">
                <span class="mini-stat-icon bg-primary"><i class="fa fa-tag" aria-hidden="true"></i></span>
                <div class="mini-stat-info text-right text-muted">
                    <span class="counter">@ViewBag.countXuatBan</span>
                    Tin đã xuất bản
                </div>
            </div>
        </div>
    }
</div>
<style>
    .mini-stat {
        cursor: pointer;
    }
</style>
<script>
    $(".mini-stat").click(function () {
        window.location.href = '/News';
    });
</script>