@using Web.Model
@using Web.Model.CustomModel
@model IEnumerable<tbl_GalleryCategory>
@{
    var lstAction = (List<int>)HttpContext.Current.Session["Action"];
    var lstLangs = (List<tbl_Languages>)TempData["Languages"];
}
<table class="table table-striped cabn_datatable">
    <thead>
        <tr>
            <th>
                <input type="hidden" id="hdfID" />
                <div class="checkbox">
                    <input id="chkall" type="checkbox">
                    <label for="chkall"></label>
                </div>
            </th>
            <th>Tên danh mục</th>
            <th>Ảnh</th>
            <th>Trang chủ</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align: middle;">
                    <div class="checkbox">
                        <input type="checkbox" value="@item.ID" id="chk'@item.ID'">
                        <label for="chk'@item.ID'"></label>
                    </div>
                </td>
                <td style="vertical-align: middle;">@item.Name</td>
                <td style="vertical-align: middle;">
                    <img src="@item.Icon" style="width: 100px;" />
                </td>
                <td style="vertical-align: middle;" align="center">@Html.Raw(item.IsHome != null ? "<span style='color:green'><i class='fa fa-check'></i></span>" : "")</td>
                <td style="vertical-align: middle;">@Html.Raw(item.Active == true ? "<span style='color:green'>Kích hoạt</span>" : "<span style='color:red'>Vô hiệu</span>")</td>
                <td style="vertical-align: middle;">
                    <div class="btn-list pull-right mr5">
                        @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Edit))
                        {
                            <a href="#" class="btn btn-primary btn-bordered" onclick="gallerycategory.loadfrmedit(@item.ID) " title="Sửa"><i class=" glyphicon glyphicon-pencil"></i></a>
                        }
                        @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Edit))
                        {
                            <a href="#" class="btn btn-success btn-bordered" onclick="gallerycategory.active(@item.ID) " title="@(item.Active == true ? "Vô hiệu" : "Kích hoạt" )">
                                <i class="fa fa-power-off"></i>
                            </a>
                        }
                        @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Delete))
                        {
                            <a href="#" class="btn btn-danger btn-bordered" onclick="gallerycategory.ondelete(@item.ID) " title="Xóa">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        InitClickCheckAllInTable("chkall", function (res) {
            $("#hdfID").val(res);
        });
        $('.cabn_datatable').dataTable(
       {
           "oLanguage": {
               "sUrl": "/Content/Vietnamese.json"
           }
       });
    });
</script>
