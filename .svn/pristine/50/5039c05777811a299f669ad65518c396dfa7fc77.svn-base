@using Web
@model Web.Model.tbl_QuestionAndAnswer
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" style="color: #286090">Hỏi đáp</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="form-group col-md-12">
            <label class="col-md-2 control-label pt0 pr0">Câu hỏi: </label>
            <div class="col-md-10">@Model.Question</div>
        </div>
        <div class="form-group col-md-12" style="border-bottom: 1px solid #ddd; padding-bottom: 5px;">
            <div class="col-md-12 pull-right" align="right"><i style="font-size: 12px; color: #444;">Gửi bởi : @Model.FullNameOfQuestion (@string.Format("{0: dd/MM/yyyy HH:mm}", Model.CreatedDate))</i></div>
        </div>
        <div class="form-group col-md-12">
            <label class="col-md-2 control-label pt0 pr0">Trả lời: </label>
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(Model.Answer))
                {
                    @Html.Raw(Model.Answer.Replace(Environment.NewLine, "<br/>"));
                }
            </div>
        </div>
    </div>
    <div class="form-group col-md-12">
        <div class="col-md-12 pull-right" align="right"><i style="font-size: 12px; color: #444;">Trả lời bởi : @Model.UserNameOfAnswer (@string.Format("{0: dd/MM/yyyy HH:mm}", Model.AnswerDate))</i></div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-primary" data-dismiss="modal">Đóng</button>
</div>