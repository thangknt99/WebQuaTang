@using Web.Core
@model List<Web.Model.tbl_NewsPaper>
@{
    ViewBag.Title = "Danh sách bài viết";
    Layout = "~/Views/Shared/_LayoutChung.cshtml";
    var dothtml = ".html";
}
<div class="row content-space">
    <div class="col-md-12 col-xs-12">
        <!-- start right content news -->
        <form action="" method="GET" class="form-horizontal custom-form" id="frmSrcDongGop">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 control-label">Tìm kiếm: </label>
                        <div class="col-md-6 col-sm-6 pr0">
                            <input type="text" class="form-control" name="title" placeholder="Nhập từ khóa ..." value="@ViewBag.Tieude">
                        </div>
                        <div class="col-md-2 col-sm-2">
                            <img src="~/assets/images/nuttk.png" class="nuttk" onclick="$('#frmSrcDongGop').submit();" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <table class="table table-bordered" style="float: left; width: 100%; margin-top:10px;">
            <thead style="background: #efefef;">
                <tr>
                    <th style="vertical-align: middle;text-align:center;font-weight:bold;">Tiêu đề</th>
                    <th style="vertical-align: middle; font-weight: bold;">Nội dung</th>
                    <th style="vertical-align: middle; min-width: 113px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    /*item.NoiDung = HttpUtility.HtmlDecode(item.NoiDung);
                    var noidung = "";
                    if (item.NoiDung.Count() > 200)
                    {
                        noidung = "<span class='wrapDetailFE'>" + item.NoiDung + "</span>";
                        //noidung = noidung.Substring(0, 199) + "...";
                    }
                    else { noidung = item.NoiDung; }*/
                    <tr>
                        <td style="vertical-align: middle;" width="200">
                            @item.Name
                        </td>
                        <td style="vertical-align: middle;">
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                @Html.Raw(HelperString.TruncateByWord(@item.Description.Replace(Environment.NewLine,"<br>"),100))<a href="/pages/dong-gop-y-kien/@item.ID@dothtml" style="font-size: 13px;text-decoration: none; margin-left: 5px; width:100%; float:left; text-align:right;">... xem thêm</a>   
                            }
                        </td>
                        <td style="vertical-align: middle;" width="100">
                            <a href="/pages/dong-gop-y-kien/@item.ID@dothtml" style="font-size: 13px;text-decoration: none;">Đóng góp ý kiến</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>