@using Web
@using Web.Core
@using Web.Model
@using Web.Model.CustomModel
@model IEnumerable<tbl_TaiLieu>
@{
    var lstAction = (List<int>)HttpContext.Current.Session["Action"];
}
<table class="table table-striped cabn_datatable">
    <thead>
        <tr>
            <th>
                <input type="hidden" id="hdfID" />
                <div class="checkbox">
                    <input id="chkall" type="checkbox">
                    <label for="chkall"></label>
                </div>
            </th>
            <th>Thư mục</th>
            <th>File đính kèm</th>
            <th>Ngày tạo</th>
            <th>Thứ tự</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align: middle;">
                    <div class="checkbox">
                        <input type="checkbox" value="@item.ID" id="chk'@item.ID'">
                        <label for="chk'@item.ID'"></label>
                    </div>
                </td>
                <td style="vertical-align: middle;">
                    @item.CatName
                    @Html.HiddenFor(g => item.ID)
                </td>
                <td style="vertical-align: middle;">
                    <a href="@item.LinkFile"><i class="fa fa-download"></i></a>
                    @item.ReplaceName
                </td>
                <td style="vertical-align: middle;">
                    @(item.CreateDate != null ? HelperDateTime.ConvertDateToString(item.CreateDate) : "")
                </td>
                <td style="vertical-align: middle;">
                    @Html.HiddenFor(g => item.ID)
                    @Html.TextBoxFor(g => item.Ordering, new { @class = "form-control width50 text-center" })
                </td>
                <td style="vertical-align: middle;">@Html.Raw(item.Status ? "<span style='color:green'>Kích hoạt</span>" : "<span style='color:red'>Vô hiệu</span>")</td>
                <td style="vertical-align: middle;">
                    <div class="btn-list pull-right mr5">
                        @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Edit))
                        {
                            <a href="#" class="btn btn-primary btn-bordered" onclick="tailieu.loadfrmedit(@item.ID) " title="Sửa"><i class=" glyphicon glyphicon-pencil"></i></a>
                        }
                        @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Delete))
                        {
                            <a href="#" class="btn btn-danger btn-bordered" onclick="tailieu.ondelete(@item.ID) " title="Xóa">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        InitClickCheckAllInTable("chkall", function (res) {
            $("#hdfID").val(res);
        });
        $('.cabn_datatable').dataTable(
       {
           "oLanguage": {
               "sUrl": "/Content/Vietnamese.json"
           }
       });
    });
</script>
