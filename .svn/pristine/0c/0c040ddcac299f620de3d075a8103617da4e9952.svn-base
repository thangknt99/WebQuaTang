<div class="col-md-12">
    <div class="row">
        @foreach (var itemqc in ImgCenter)
        {
            var linkimg = "#";
            var target = "";
            if (itemqc.Url != null)
            {
                linkimg = itemqc.Url;
                target = "_blank";
            }
            <a href="@linkimg" title="" target="@target">
                <img class="img-responsive slimcent" src="@itemqc.Images" alt="">
            </a>
        }
    </div>
</div>
