@{
    Layout = null;
}

@using Web.Core
@using Web.Model
@model List<Web.Model.PathWay>

@if (Model.Count > 0)            
{
    <div class="breadcrumbvz">
        <ul>
            <li>
                <a href="/">
                    <i class="glyphicon glyphicon-home"> </i>
                </a>                
            </li>
            @foreach (var item in Model)
            {
                <li>
                    <i class="glyphicon glyphicon-menu-right"></i>
                    @if (item.Icon != "")
                    {
                        <i class="@item.Icon"></i>    
                    }
                    <a href="@item.Link">
                        @item.Name
                    </a>
                </li>
            } 
        </ul>
    </div>
}