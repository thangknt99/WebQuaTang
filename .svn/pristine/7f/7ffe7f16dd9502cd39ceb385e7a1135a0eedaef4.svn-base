@using Web.Model
@model Web.Model.tbl_CoQuanBanHanh
@{ 
    var lstParent = (List<tbl_CoQuanBanHanh>)TempData["lstParent"];
    lstParent.ForEach(g => g.Name = string.Concat(Enumerable.Repeat("--", g.Level)) + " " + g.Name);
}
@using (Ajax.BeginForm("Edit", "CoQuanBanHanh", null,
    new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "coquanbanhanh.onEditSuccess"
    },
    new { @id = "basicForm", @class = "form-horizontal" }))
{
    <div class="form-group">
        <label class="col-md-2 control-label">Ngôn ngữ</label>
        @{
    var languages = (List<tbl_Languages>)TempData["Languages"];
        }
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.LangCode, new SelectList(languages, "Code", "Name"), new { @class = "form-control",id= "LangCode" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Danh mục cha</label>
        <div class="col-md-10">
            @Html.DropDownListFor(g => g.ParentID, new SelectList(lstParent, "ID", "Name"), "--- Danh mục văn bản cha ---", new { @class = "form-control selectAdd", id = "ParentID" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Tên danh mục</label>
        <div class="col-md-10">
            @Html.HiddenFor(g=>g.ID)
            @Html.TextBoxFor(g => g.Name, new { @class = "form-control", placeholder = "Tên lĩnh vực" })
        </div>
    </div>
    @*<div class="form-group">
        <label class="col-md-2 control-label">Mô tả</label>
        <div class="col-md-10">
            @Html.TextAreaFor(g => g.Description, new { @class = "form-control" })
        </div>
    </div>*@
    <div class="form-group col-md-12">
        <label class="col-md-2 control-label">Thứ tự</label>
        <div class="col-md-10">
            @Html.TextBoxFor(g => g.Ordering, new { @class = "form-control", placeholder = "0" })
        </div>
    </div>
    <div class="form-group ">
        <label class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <div class="checkbox checkbox-success checkbox-inline">
                <input type="checkbox" id="Status" name="Status" @(Model.Status ? "checked" : "") value="true">
                <label for="Status"> Kích hoạt</label>
            </div>
        </div>
    </div>
    <div class="col-md-10 pull-right pl0">
        <button type="submit" class="btn btn-primary waves-effect waves-light">Cập nhật</button>
    </div>
}
<script>
    // Basic Form
    $(document).ready(function () {
        $("#basicForm").validate({
            rules:
        {
            Name:
            {
                required: true
            },
            LangCode:
            {
                required: true
            },
            Ordering: {
                required: true,
                number: true
            }
        },
            messages:
            {
                Name:
                {
                    required: "Chưa nhập tên danh mục văn bản"
                },
                LangCode: {
                    required: "Bạn chưa chọn ngôn ngữ"
                },
                Ordering: {
                    required: "Chưa nhập thứ tự",
                    number: "Yêu cầu phải là số"
                }
            }
        });
        $("#ParentID").select2();
        $("#LangCode").select2();
    });
</script>